<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/app_primary_color"
    android:orientation="vertical">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_topbar_bg_color="?attr/app_primary_color"
        app:qmui_topbar_title_color="@color/qmui_config_color_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="@color/qmui_config_color_white"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/actv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="点击按钮添加相应图片" />

        <Button
            android:id="@+id/btAddImage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add Image 1" />

        <Button
            android:id="@+id/btAddImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add Image 2" />

        <Button
            android:id="@+id/btAddImage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add Image 3" />
    </LinearLayout>
</FrameLayout>