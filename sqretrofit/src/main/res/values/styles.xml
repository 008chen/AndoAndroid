<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 两个按钮一行，有 Padding/Margin -->
    <style name="FlexTwoQMButton">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/flex_qmbt</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dp_03</item>
        <item name="layout_flexBasisPercent">40%</item>
        <item name="layout_flexGrow">1</item>
    </style><!-- 三个按钮一行，无 Padding/Margin -->
    <style name="FlexThreeQMButton">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#eee</item>
        <item name="android:layout_margin">@dimen/dp_03</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/flex_qmbt</item>
        <item name="android:gravity">center</item>
        <item name="layout_flexBasisPercent">30%</item>
        <item name="layout_flexGrow">1</item>
    </style>
</resources>
